   <script>
    function toggleMobileMenu() {
        const menu = document.getElementById('navbarMenu');
        menu.classList.toggle('active');
    }

    function toggleDropdown(event) {
        if (window.innerWidth <= 768) {
            event.preventDefault();
            const dropdown = event.target.closest('.dropdown');
            dropdown.classList.toggle('active');
        }
    }

    document.addEventListener('click', function(event) {
        const menu = document.getElementById('navbarMenu');
        const toggle = document.querySelector('.mobile-menu-toggle');
        
        if (menu && toggle && !menu.contains(event.target) && !toggle.contains(event.target)) {
            menu.classList.remove('active');
        }

        const dropdowns = document.querySelectorAll('.dropdown');
        dropdowns.forEach(dropdown => {
            if (!dropdown.contains(event.target)) {
                dropdown.classList.remove('active');
            }
        });
    });

    // FULLY AUTOMATIC WhatsApp & Email Script (NO DUPLICATION)
    document.addEventListener('DOMContentLoaded', () => {
        const whatsappBtn = document.getElementById('whatsappBtn');
        
        if (whatsappBtn) {
            const productSection = document.querySelector('.product-content');
            
            if (productSection) {
                // Auto-extract product name from <h1> ONLY
                const productNameElement = productSection.querySelector('h1');
                const productName = productNameElement ? productNameElement.textContent.trim() : 'Product';
                
                // Auto-extract ALL specifications from table (single line format)
                let specifications = '';
                const specsTable = productSection.querySelector('.specs-table tbody');
                if (specsTable) {
                    const specs = [];
                    specsTable.querySelectorAll('tr').forEach(row => {
                        const cells = row.querySelectorAll('td');
                        if (cells.length === 2) {
                            const specName = cells[0].textContent.trim();
                            const specValue = cells[1].textContent.trim();
                            specs.push(`${specName}: ${specValue}`);
                        }
                    });
                    specifications = specs.join(' • ');
                }
                
                // Auto-extract category (if available)
                let category = '';
                const categoryElement = productSection.querySelector('.product-category');
                if (categoryElement) {
                    category = categoryElement.textContent.trim();
                }
                
                // Auto-get current page URL
                const pageUrl = window.location.href;
                
                // Build WhatsApp message (CLEAN - NO DUPLICATION)
                let whatsappMessage = `Hello, I am interested in this product:\n${productName}`;
                
                if (specifications) {
                    whatsappMessage += `\n\nSpecifications:\n${specifications}`;
                }
                
                if (category) {
                    whatsappMessage += `\n\nCategory: ${category}`;
                }
                
                whatsappMessage += `\n\nProduct Link: ${pageUrl}\n\nPlease provide pricing and availability details.`;
                
                // Update WhatsApp button
                whatsappBtn.href = `https://wa.me/917378852955?text=${encodeURIComponent(whatsappMessage)}`;
                
                console.log('WhatsApp Message:', whatsappMessage);
            }
        }
        
        // Auto-update Email button
        const emailBtn = document.querySelector('.btn-email');
        if (emailBtn) {
            const productSection = document.querySelector('.product-content');
            if (productSection) {
                const productName = productSection.querySelector('h1')?.textContent.trim() || 'Product';
                const pageUrl = window.location.href;
                
                // Extract specifications for email (multi-line format)
                let emailSpecs = '';
                const specsTable = productSection.querySelector('.specs-table tbody');
                if (specsTable) {
                    specsTable.querySelectorAll('tr').forEach(row => {
                        const cells = row.querySelectorAll('td');
                        if (cells.length === 2) {
                            emailSpecs += `${cells[0].textContent.trim()}: ${cells[1].textContent.trim()}\n`;
                        }
                    });
                }
                
                const emailSubject = `Inquiry for Product: ${productName}`;
                const emailBody = `I am interested in this product:\n\n${productName}\n\nSpecifications:\n${emailSpecs}\nProduct Link: ${pageUrl}\n\nPlease provide price and availability.`;
                emailBtn.href = `mailto:sales@rexonweldsandtools.in?subject=${encodeURIComponent(emailSubject)}&body=${encodeURIComponent(emailBody)}`;
            }
        }
    });

    // Footer animation
    const footer = document.querySelector('.footer-container');
    if (footer) {
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    footer.classList.add('in-view');
                }
            });
        }, {
            threshold: 0.2
        });
        observer.observe(footer);
    }
</script>